{% extends 'base.html.twig' %}

{% block title %}Calcule de la distance en tre deux coordonnées gps{% endblock %}

{% block body %}


<div class="container">
    <div class="col">
    <h1>Calcule distance ip address et addresse postale</h1>
    {{ form(form) }}
    </div>
{% if distance >=0%}
    <div class="alert alert-success" role="alert">
        La distance est de : <strong> {{ distance|number_format(2, ',', ' ') }} km</strong>
    </div>
{% elseif distance ==-1  %}
    <div class="alert alert-warning" role="alert">
        Le service a rencontré un problème réseau, veuillez réessayer.
    </div>
{% endif %}
</div>
{% endblock %}
